@using Microsoft.AspNetCore.Identity;

@inject UserManager<ApplicationUser> _userManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Article</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evSX huddled7glt/7zC+GEUfz9fzUH70MtQvXvKVNmGOQvLNkQh6aIWxtOWqQ8LlY/" crossorigin="anonymous">
</head>
<body>
    @for(int i = 0; i < 1; i++)
    {
        var currentArticle = new NewsArticle
                {
                    Title = " ",
                    Description = " "
                };
    
    <div class="container mt-3">
        <h1>Upload Your Article</h1>
        <hr>
        <form id="articleForm" method="post" action="Post">
            <div class="mb-3">
                <label for="articleTitle" class="form-label">Article Title</label>
                <input type="text" class="form-control" id="articleTitle" name="articleTitle" value="@currentArticle.Title" required>
            </div>
            <div class="mb-3">
                <label for="articleContent" class="form-label">Article Content</label>
                <textarea class="form-control" id="articleContent" name="articleContent" rows="10" value="@currentArticle.Description" required></textarea>
            </div>
            <div class="mb-3">
                <label for="articleFile" class="form-label">Upload Image (optional)</label>
                <input type="file" class="form-control" id="articleFile" name="articleFile">
            </div>
            <input type="hidden" name="articleTitle" value="@currentArticle.Title"/>
            <input type="hidden" name="articleContent" value="@currentArticle.Description"/>
            <input type="hidden" name="uploaderId" value="@_userManager.GetUserId(User)">
            <button type="submit" class="btn btn-primary">Upload Article</button>
        </form>
    </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-OgwbZS7/BXzYhFOT11tTvwVHcwjK1Q2vRLzTjpk5ON6jTyWShGKTvMj7BsANcrGvB" crossorigin="anonymous"></script>
</body>
</html>